<div class="text-center">
<%= cl_image_tag cocktail.photo, height: 200, crop: :fit, class: "product-image hidden-xs" %>
</div>
<h2> <%= cocktail.name %> </h2>
<ul> <% cocktail.doses.each do |dose| %>
 <li> <%= dose.description %> of <%= dose.ingredient.name %>
 <i><%= link_to "", dose_path(dose), method: :delete, class: "fa fa-trash-o"%></i></li>
 <% end %>
</ul>
<p class= "btn btn-primary showmyform">Add a dose</p>
<br>

<div class="formidable hidden">
<%= simple_form_for [cocktail, cocktail.doses.new] do |f| %>
 <%= f.input :description %>
 <%= f.association :ingredient, collection: Ingredient.all  %>
 <%= f.submit class: "btn btn-primary" %>
<% end %>
</div>
